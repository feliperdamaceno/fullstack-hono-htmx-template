{
  "name": "hono-template",
  "version": "1.0.0",
  "description": "",
  "main": "cmd/main.ts",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production tsx cmd/main.ts",
    "build": "npm run build:css",
    "build:css": "vite build",
    "dev": "npm run dev:css & npm run dev:server",
    "dev:server": "tsx watch cmd/main.ts",
    "dev:css": "vite build --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#core/*": "./internal/core/*.js",
    "#config/*": "./internal/config/*.js",
    "#database/*": "./internal/database/*.js",
    "#handler/*": "./internal/handler/*.js",
    "#helper/*": "./internal/helper/*.js",
    "#middleware/*": "./internal/middleware/*.js",
    "#model/*": "./internal/model/*.js",
    "#type/*": "./internal/types/*.js",
    "#validator/*": "./internal/validator/*.js",
    "#view/*": "./internal/view/*.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "dotenv": "^16.4.7",
    "hono": "^4.6.15",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "sass": "^1.83.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.6"
  }
}
