{
  "name": "hono-template",
  "version": "1.0.0",
  "description": "",
  "main": "cmd/main.ts",
  "type": "module",
  "imports": {
    "#core/*": "./internal/core/*.js",
    "#config/*": "./internal/config/*.js",
    "#database/*": "./internal/database/*.js",
    "#handler/*": "./internal/handler/*.js",
    "#helper/*": "./internal/helper/*.js",
    "#middleware/*": "./internal/middleware/*.js",
    "#model/*": "./internal/model/*.js",
    "#type/*": "./internal/types/*.js",
    "#validator/*": "./internal/validator/*.js",
    "#view/*": "./internal/view/*.js"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production bun cmd/main.ts",
    "build": "npm run build:static",
    "build:static": "vite build",
    "dev": "npm run dev:static & npm run dev:server",
    "dev:server": "bun --watch cmd/main.ts",
    "dev:static": "vite build --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "hono": "^4.6.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "autoprefixer": "^10.4.20",
    "bun-types": "^1.1.42",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "htmx.org": "2.0.4",
    "husky": "^8.0.0",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.6"
  },
  "engines": {
    "bun": "1.1.42"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ],
    "!internal/view/static/*": []
  }
}
